# Environment Configuration for Video Streaming API
# Copy this file to .env and modify as needed

# =============================================================================
# SERVICE ENABLEMENT
# =============================================================================
# Enable/disable services (true/false)
ENABLE_PYTHON_API=true
ENABLE_GO_API=true
ENABLE_LOAD_BALANCER=false
ENABLE_MONITORING=false

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Python API settings
PYTHON_API_PORT=8000
PYTHON_ENVIRONMENT=production
PYTHON_LOG_LEVEL=INFO
PYTHON_WORKERS=1

# Go API settings
GO_API_PORT=8001
GO_LOG_LEVEL=INFO
GO_GIN_MODE=release

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Redis/DragonflyDB settings
REDIS_HOST=dragonfly
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_MEMORY=512mb

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Resource limits
PYTHON_MEMORY_LIMIT=512M
PYTHON_CPU_LIMIT=1.0
GO_MEMORY_LIMIT=256M
GO_CPU_LIMIT=0.5
DRAGONFLY_MEMORY_LIMIT=512M
DRAGONFLY_CPU_LIMIT=0.5

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Download directories
DOWNLOADS_PATH=./downloads
LOGS_PATH=./logs
CONFIG_PATH=./config

# Storage limits
MAX_STORAGE_GB=50
TEMP_RETENTION_HOURS=24
MAX_CONCURRENT_DOWNLOADS=10

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_BURST=100

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS settings (must be valid JSON array for cors_origins)
CORS_ORIGINS=["*"]
CORS_METHODS=GET,POST,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# =============================================================================
# MONITORING (Optional)
# =============================================================================
# Prometheus settings
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=200h

# Grafana settings
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development mode (enables hot reloading, debug logs, etc.)
DEVELOPMENT_MODE=false
ENABLE_HOT_RELOAD=false
ENABLE_DEBUG_PORTS=false



